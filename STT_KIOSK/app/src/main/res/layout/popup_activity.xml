<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <!-- 타이틀바 -->
    <!-- //end 타이틀바 -->

    <!-- Notice -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/popup_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/burger_az" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:textColor="#272727"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popup_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부드럽고 촉촉한 포테이토번과 풍부한 육즙의 두툼한 호주산 쇠고기패티로 본연의 맛을 꽉 채운 클래식 치즈버거"
                android:textColor="#272727"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#66bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/detail_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/detail_btn"
                    android:onClick="onChangeClicked"
                    android:text="상세정보" />

                <TextView
                    android:id="@+id/popup_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:gravity="right|center_horizontal"
                    android:text="12345"
                    android:textColor="#565555"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <!-- Notice -->

    <!-- 닫기 버튼 -->

    <LinearLayout
        android:id="@+id/popup_dessert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/text_dessert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="사이드 - 디저트 : "
            android:textColor="#AB000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dessert_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="감자튀김"
            android:textColor="#AB000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dessert_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+0"
            android:textColor="#AB000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/dessert_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.7"
            android:background="@drawable/border_all_2"
            android:onClick="onChangeClicked"
            android:padding="3dp"
            android:text="변경하기"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="65dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_drink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="사이드 - 음료 :"
            android:textColor="#AB000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drink_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="콜라"
            android:textColor="#AB000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/drink_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+0"
            android:textColor="#AB000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/drink_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.7"
            android:background="@drawable/border_all_2"
            android:onClick="onChangeClicked"
            android:padding="3dp"
            android:text="변경하기"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_topping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="65dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_topping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="선택 - 토핑 :"
            android:textColor="#AB000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topping_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="#AB000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/topping_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+0"
            android:textColor="#AB000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/topping_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.7"
            android:background="@drawable/border_all_2"
            android:onClick="onChangeClicked"
            android:padding="3dp"
            android:text="추가하기"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:text="총 금액"
            android:textColor="#FFaa00"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:textColor="#AB000000"
            android:textSize="32dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_righttop"
            android:gravity="center"
            android:onClick="mOnClose"
            android:padding="20dp"
            android:paddingBottom="20dp"
            android:text="취소"
            android:textColor="#ffaa00"
            android:textSize="30sp" />

        <Button
            android:id="@+id/get_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_top"
            android:gravity="center"
            android:onClick="mOnOK"
            android:padding="20dp"
            android:paddingBottom="20dp"
            android:text="담기"
            android:textColor="#ffaa00"
            android:textSize="30sp" />

    </LinearLayout><![CDATA[

    !—// 닫기 버튼 —>
]]>
</LinearLayout>